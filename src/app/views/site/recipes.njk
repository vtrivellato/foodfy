{% extends "./layout.njk" %}

{% block content %}

    <div class="recipes">
        <h3>Mais acessadas</h3>

        <div class="cards">
            {% for recipe in recipes %}
                <div class="card">
                    <img src="{{ recipe.image }}" alt="recipe">
                    <h4>{{ recipe.title }}</h4>
                    <p>por {{ recipe.author }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
    
{% endblock content %}