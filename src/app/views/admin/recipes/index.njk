{% extends "../layout.njk" %}

{% block content %}

    <div class="recipes">
        <div id="title" class="flex-row" style="justify-content: space-between;">
            <h3>Gerenciar receitas</h3>
        </div>

        <div class="admin-cards">
            {% for recipe in recipes %}
                <div class="admin-card">
                    <img src="{{ recipe.image }}" alt="recipe">

                    <div class="flex-column">
                        <h4>{{ recipe.title }}</h4>
                        <p>por {{ recipe.author }}</p>
                        <a class="link" href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}