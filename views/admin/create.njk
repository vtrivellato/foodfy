{% extends "../layout.njk" %}

{% block content %}

    <form class="details-card" method="post" action="/admin/recipes">
        <div class="flex-row" style="justify-content: space-between;">
            <h3>Criando receita</h3>
            
            <div>
                <button class="button" type="submit">Salvar receita</button>
            </div>
        </div>

        <div class="form-field-area">
            <h4>Nome da receita</h4>

            <input type="text" name="title" value="{{ recipe.title }}">
        </div>
        
        <div class="form-field-area">
            <h4>Autor da receita</h4>

            <input type="text" name="author" value="{{ recipe.author }}">
        </div>

        {% include './fields.njk' %}
    </form>

{% endblock %}